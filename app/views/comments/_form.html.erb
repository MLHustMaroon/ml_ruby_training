<%= form_for comment, remote: true do |form| %>
  <%= render 'shared/error_messages', object: comment %>

  <div class="field">
    <%= form.text_field :content, id: :comment_content %>
  </div>

    <%= form.hidden_field :post_id, value: post.id %>

  <div class="actions">
    <%= form.submit 'Comment' %>
  </div>
<% end %>
